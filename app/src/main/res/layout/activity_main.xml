<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1"
    tools:context="id.sch.smktelkom_mlg.learn.formulir.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.80"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Formulir Pembelian Tiket"
            android:textAlignment="center"
            android:textColor="#0c0101" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textViewNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView"
            android:text="Nama" />


        <EditText
            android:id="@+id/editTextNm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewAsal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asal" />


        <EditText
            android:id="@+id/editTextAsal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewTujuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tujuan" />


        <EditText
            android:id="@+id/editTextTujuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewKelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kelas" />

        <RadioGroup
            android:id="@+id/radioGroupKelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButtonEks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eksekutif" />

            <RadioButton
                android:id="@+id/radioButtonBis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bisnis" />

            <RadioButton
                android:id="@+id/radioButtonEk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ekonomi" />

        </RadioGroup>

        <TextView
            android:id="@+id/textViewUsia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usia" />

        <CheckBox
            android:id="@+id/checkBoxDew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dewasa" />

        <CheckBox
            android:id="@+id/checkBoxAn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anak-Anak" />

        <TextView
            android:id="@+id/textViewNmK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Kereta" />

        <Spinner
            android:id="@+id/spinnerKereta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/kereta" />

        <Button
            android:id="@+id/buttonOK"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bgbtn"
            android:text="OK"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textViewHasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hasil" />

    </LinearLayout>

</ScrollView>